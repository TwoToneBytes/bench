{
  "name": "Benchwarmer - The Dribble Tab Extention",
  "version": "0.1",
  "manifest_version": 1,
  "description": "Show the latest Dribble shots every time you open up a new tab",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "http://api.dribbble.com/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": ["http://api.dribbble.com/*"],
      "js": ["js/lib/jquery-1.8.0.js", "js/app.js"]
    }
  ]
}